[Unit]
Description=Hemp0x's distributed currency daemon
After=network.target

[Service]
User=hemp0x
Group=hemp0x

Type=forking
PIDFile=/var/lib/hemp0xd/hemp0xd.pid
ExecStart=/usr/bin/hemp0xd -daemon -pid=/var/lib/hemp0xd/hemp0xd.pid \
-conf=/etc/hemp0x/hemp0x.conf -datadir=/var/lib/hemp0xd -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
