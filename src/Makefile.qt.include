  $(PROTOBUF_H) $(QT_QRC_CPP) $(QT_QRC_LOCALE_CPP)

# forms/foo.h -> forms/ui_foo.h
QT_FORMS_H=$(join $(dir $(QT_FORMS_UI)),$(addprefix ui_, $(notdir $(QT_FORMS_UI:.ui=.h))))

# Most files will depend on the forms and moc files as includes. Generate them
# before anything else.
$(QT_MOC): $(QT_FORMS_H)
$(qt_libhemp0xqt_a_OBJECTS) $(qt_hemp0x_qt_OBJECTS) : | $(QT_MOC)

#Generating these with a half-written protobuf header leads to wacky results.
#This makes sure it's done.
$(QT_MOC): $(PROTOBUF_H)
$(QT_MOC_CPP): $(PROTOBUF_H)

# hemp0x-qt binary #
qt_hemp0x_qt_CPPFLAGS = $(AM_CPPFLAGS) $(HEMP0X_INCLUDES) $(HEMP0X_QT_INCLUDES) \
  $(QT_INCLUDES) $(PROTOBUF_CFLAGS) $(QR_CFLAGS)
qt_hemp0x_qt_CXXFLAGS = $(AM_CXXFLAGS) $(QT_PIE_FLAGS)

qt_hemp0x_qt_SOURCES = qt/hemp0x.cpp
if TARGET_DARWIN
  qt_hemp0x_qt_SOURCES += $(HEMP0X_MM)
endif
if TARGET_WINDOWS
  qt_hemp0x_qt_SOURCES += $(HEMP0X_RC)
endif
qt_hemp0x_qt_LDADD = qt/libhemp0xqt.a $(LIBHEMP0X_SERVER)
if ENABLE_WALLET
qt_hemp0x_qt_LDADD += $(LIBHEMP0X_WALLET)
endif
if ENABLE_ZMQ
qt_hemp0x_qt_LDADD += $(LIBHEMP0X_ZMQ) $(ZMQ_LIBS)
endif
qt_hemp0x_qt_LDADD += $(LIBHEMP0X_CLI) $(LIBHEMP0X_COMMON) $(LIBHEMP0X_UTIL) $(LIBHEMP0X_CONSENSUS) $(LIBHEMP0X_CRYPTO) $(LIBUNIVALUE) $(LIBLEVELDB) $(LIBLEVELDB_SSE42) $(LIBMEMENV) \
  $(BOOST_LIBS) $(QT_LIBS) $(QT_DBUS_LIBS) $(QR_LIBS) $(PROTOBUF_LIBS) $(BDB_LIBS) $(SSL_LIBS) $(CRYPTO_LIBS) $(MINIUPNPC_LIBS) $(LIBSECP256K1) \
  $(EVENT_PTHREADS_LIBS) $(EVENT_LIBS)
qt_hemp0x_qt_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(QT_LDFLAGS) $(LIBTOOL_APP_LDFLAGS)
qt_hemp0x_qt_LIBTOOLFLAGS = --tag CXX

#locale/foo.ts -> locale/foo.qm
QT_QM=$(QT_TS:.ts=.qm)

SECONDARY: $(QT_QM)

$(srcdir)/qt/hemp0xstrings.cpp: $(libhemp0x_server_a_SOURCES) $(libhemp0x_wallet_a_SOURCES) $(libhemp0x_common_a_SOURCES) $(libhemp0x_zmq_a_SOURCES) $(libhemp0x_consensus_a_SOURCES) $(libhemp0x_util_a_SOURCES)
	@test -n $(XGETTEXT) || echo "xgettext is required for updating translations"
	$(AM_V_GEN) cd $(srcdir); XGETTEXT=$(XGETTEXT) PACKAGE_NAME="$(PACKAGE_NAME)" COPYRIGHT_HOLDERS="$(COPYRIGHT_HOLDERS)" COPYRIGHT_HOLDERS_SUBSTITUTION="$(COPYRIGHT_HOLDERS_SUBSTITUTION)" $(PYTHON) ../share/qt/extract_strings_qt.py $^

translate: $(srcdir)/qt/hemp0xstrings.cpp $(QT_FORMS_UI) $(QT_FORMS_UI) $(HEMP0X_QT_BASE_CPP) qt/hemp0x.cpp $(HEMP0X_QT_WINDOWS_CPP) $(HEMP0X_QT_WALLET_CPP) $(HEMP0X_QT_H) $(HEMP0X_MM)
	@test -n $(LUPDATE) || echo "lupdate is required for updating translations"
	$(AM_V_GEN) QT_SELECT=$(QT_SELECT) $(LUPDATE) $^ -locations relative -no-obsolete -ts $(srcdir)/qt/locale/hemp0x_en.ts

